<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	
	android:focusable="false"
	
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	
	android:background="@color/message_text_background_own"
	>
	
	<TextView android:id="@+id/person"
		android:layout_width="80dp"
		android:layout_height="wrap_content"
		
		android:layout_margin="5dp"
		
		android:gravity="center"
		
		android:textSize="14sp"
		android:textStyle="bold"
		android:textColor="@android:color/white"
		
		android:text="Eric M."
		/>
		
	<View
		android:layout_width="1dp"
		android:layout_height="fill_parent"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="@color/message_text_divider"
		
		android:visibility="invisible"
		/>
	
	<LinearLayout android:id="@+id/loading"
    	android:layout_width="fill_parent"
    	android:layout_height="80dp"
    	android:layout_margin="5dp"
    	
    	android:orientation="horizontal"
    	android:gravity="center"
    	
    	android:visibility="visible"
    	>
    	
    	<ProgressBar android:id="@+id/loading_spinner"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		style="?android:attr/progressBarStyleSmallTitle"
    		
    		android:layout_marginRight="10dp"
    		/>
    		
    	<TextView android:id="@+id/loading_message"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		
    		android:text="@string/image_loading"
    		/>
    	
    </LinearLayout>
    
    <ImageView android:id="@+id/image"
		android:layout_width="fill_parent"
		android:layout_height="80dp"
		android:layout_margin="5dp"
		
		android:scaleType="centerInside"
		
		android:visibility="gone"
		/>
  	
</LinearLayout>