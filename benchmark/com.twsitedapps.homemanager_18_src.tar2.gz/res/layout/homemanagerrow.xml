<RelativeLayout 
    android:id="@+id/listViewRelativeLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingBottom="1dp" 
	android:paddingTop="1dp"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">

	<LinearLayout
	    android:id="@+id/mainlinearlayout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true" >

		<ImageView
		    android:id="@+id/appIconImageView"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:scaleType="centerCrop"
		    android:layout_marginLeft="5dp"
		    android:cropToPadding="true"
		    android:gravity="center"
		    android:paddingRight="3dp" />

		<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="5dp" >

		    <TableRow
		        android:id="@+id/tableRow1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >

		        <TextView
		            android:id="@+id/txt_apptag"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/app"
		            android:textColor="#FFFFFF" />

		    </TableRow>

		    <TableRow
		        android:id="@+id/tableRow2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >

		        <TextView
		            android:id="@+id/txt_versiontag"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/version"
		            android:textColor="#FFFFFF" />

		    </TableRow>
		    
		    <TableRow
		        android:id="@+id/tableRow3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >

		        <TextView
		            android:id="@+id/txt_permissiontag"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/permission"
		            android:paddingBottom="5dp"
		            android:textColor="#FFFFFF" />

		    </TableRow>
		    
		</TableLayout>

		<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1.85" >

		    <TableRow
		        android:id="@+id/tableRow4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >

		        <TextView
		            android:id="@+id/txt_app"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#FFFFFF"
		            android:textStyle="bold"
		            android:singleLine="true" />

		        <TextView
		            android:id="@+id/txt_default"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="3dp"
		            android:textColor="#FF0000"
		            android:singleLine="true" />

		    </TableRow>

		    <TableRow
		        android:id="@+id/tableRow5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >

		        <TextView
		            android:id="@+id/txt_version"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#FFFFFF"
		            android:textStyle="italic"
		            android:singleLine="true" />

		    </TableRow>
		    
		   <TableRow
		        android:id="@+id/tableRow6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		        
		        <TextView
		        	android:id="@+id/txt_permission"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingBottom="5dp"
		            android:textColor="#FFFFFF"
		            android:singleLine="true" />

		    </TableRow>
		    
		</TableLayout>

		<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="center" >

		    <TableRow
		        android:id="@+id/tableRow7"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right" >

		        <TextView
		            android:id="@+id/txt_memory"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:paddingBottom="5dp"
		            android:textColor="#FFFFFF" />

		    </TableRow>

		    <TableRow
		        android:id="@+id/tableRow8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right" >
		    </TableRow>
		    
		</TableLayout>

	</LinearLayout>

</RelativeLayout>