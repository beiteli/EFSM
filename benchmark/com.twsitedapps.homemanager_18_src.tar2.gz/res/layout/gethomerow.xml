<RelativeLayout 
    android:id="@+id/listViewRelativeLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingBottom="1dp" 
	android:paddingTop="1dp"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	
	<LinearLayout 
	    android:id="@+id/listViewLinearLayout2"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="center_vertical">
		
		<ImageView 
		    android:id="@+id/appIconImageView2"
		    android:layout_width="36dp"
		    android:layout_height="36dp"
		    android:cropToPadding="true"
		    android:scaleType="centerCrop"
			android:layout_marginLeft="5dp">
		</ImageView>
		
		<TableLayout 
		    android:id="@+id/listViewTableLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_below="@+id/listViewLinearLayout">
			
			<TableRow 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<TextView 
				    android:id="@+id/txt_apptag2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
					android:paddingRight="10dp"
					android:text="App:">
				</TextView>
				<TextView
					android:id="@+id/txt_app2" 
					android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
					android:textStyle="bold"
					android:paddingBottom="5dp">
				</TextView>
				<TextView
					android:id="@+id/txt_installed"
					android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:textColor="#FF0000"
					android:paddingLeft="3dp"
					android:paddingBottom="5dp">				
				</TextView>
			</TableRow>

		</TableLayout>
	</LinearLayout>
</RelativeLayout>